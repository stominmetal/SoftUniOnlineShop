{% extends 'base.html.twig' %}

{% block body_id 'add_product' %}

{% block main %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            {{ form_start(form) }}
            <fieldset>
                <legend>Add Categories</legend>
                {{ form_widget(form) }}
                <div class="form-group">
                    <div>
                        <a class="btn btn-danger" href="{{ path('add_category') }}">Reset</a>
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                </div>
            </fieldset>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $('label').addClass('col-sm-4 control-label');
            $('form').addClass('form-horizontal');
            $('fieldset div').addClass('form-group');
            $('fieldset div:last-child div').attr('class', 'col-sm-4 col-sm-offset-4');
        });
    </script>
{% endblock %}
