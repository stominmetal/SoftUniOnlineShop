{% extends 'base.html.twig' %}

{% block main %}
    <div class="well">
        <span class="categories-product-title">Products</span>
        <span class="add-group"><a class="btn btn-success right" href="{{ path('add_product') }}">Add Product</a></span>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th class="text-center">#</th>
            <th class="text-center">Imge</th>
            <th class="text-center">Name</th>
            <th class="text-center">Category</th>
            <th class="text-center">Price</th>
            <th class="text-center">Quantity</th>
            <th class="text-center">Discount</th>
            <th class="text-center"></th>
        </tr>
        </thead>
        <tbody class="text-center">
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td><img class="small-picture" src="/images/products/{{ product.imageName }}"></td>
                <td>{{ product.name }}</td>
                <td>{{ product.catId }}</td>
                <td>{{ product.price }} lv.</td>
                <td>{{ product.quantity }}</td>
                <td>{{ product.discount }}</td>
                <td>
                    <a href="{{ path('product_info', {'id' : product.id}) }}"><span class="glyphicon glyphicon-eye-open view"></span></a>
                    <a href="{{ path('edit_product', {'id' : product.id}) }}"><span class="glyphicon glyphicon-edit edit"></span></a>
                    <a href="{{ path('product_delete', {'id' : product.id}) }}"> <span class="glyphicon glyphicon-trash trash"></span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}