{% extends 'base.html.twig' %}

{% block main %}
    <div class="well">
        <span class="categories-product-title">Categories</span>
        <span class="add-group"><a class="btn btn-success right" href="{{ path('add_category') }}">Add category</a></span>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th class="text-center">#</th>
            <th class="text-center">Image</th>
            <th class="text-center">Name</th>
            <th class="text-center">Discount</th>
            <th class="text-center"></th>
        </tr>
        </thead>
        <tbody class="text-center">
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td><img class="small-picture" src="/images/categories/{{ category.imageName }}"></td>
                <td>{{ category.name }}</td>
                <td>{{ category.discount }}</td>
                <td>
                    <a href="{{ path('edit_category', {'id' : category.id}) }}"><span class="glyphicon glyphicon-edit edit-cat"></span></a>
                    <a href="{{ path('category_delete', {'id' : category.id}) }}"><span class="glyphicon glyphicon-trash trash"></span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

